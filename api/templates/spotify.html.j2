<svg width="480" height="133" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="480" height="133">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                .main {
                    display: flex;
                }
                
                .container {
                    border-radius: 5px;
                    padding: 10px 10px 10px 0px;
                    background-color: #ffffff;
                }

                .art {
                    width: 27%;
                    /* float: left; Removed float */
                    margin-left: 5px; /* Adjusted margin */
                    position: relative; /* Make this the reference for absolute positioning */
                    display: flex; /* Use flex to center image */
                    justify-content: center;
                    align-items: center;
                }

                .content {
                    width: 71%;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                }

                .song {
                    width: 330px;
                    color: #000000;
                    overflow: hidden;
                    margin-top: 3px;
                    font-size: 24px;
                    text-align: center;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-weight: 600;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                }

                .artist {
                    width: 330px;
                    color: #525252;
                    font-size: 20px;
                    margin-top: 4px;
                    text-align: center;
                    margin-bottom: 5px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                }

                .status {
                    position: absolute;
                    top: -2px; /* Position near top-right of art */
                    right: 0px; /* Position near top-right of art */
                    /* width: auto; Removed fixed width */
                    font-size: 10px; /* Smaller font for offline text if needed */
                    height: 12px; /* Adjust height */
                    /* margin-bottom: 0; Removed margin */
                    /* text-align: right; Align text right if shown */
                    display: flex;
                    align-items: center;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                    color: #737373; /* Default color for text */
                    background-color: rgba(255, 255, 255, 0.7); /* Slight background for visibility */
                    padding: 1px 3px;
                    border-radius: 3px;
                    z-index: 1; /* Ensure it's above the image */
                }

                .status-dot {
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    display: inline-block;
                }

                .status-dot-playing {
                    background-color: #1DB954; /* Spotify green */
                }

                .status-dot-recent {
                    background-color: #737373; /* Gray */
                }

                .cover {
                    width: 100px;
                    height: 100px;
                    border-radius: 5px;
                }
                
                .spotify-logo {
                    position: fixed;
                    right: 20px;
                    top: 10px;
                    width: 25px;
                }

                a {
                    text-decoration: none;
                }
            </style>

            <div class="main">
                <div class="art">
                     <a href="{{songURI}}" target="_blank"> <!-- Link covers image -->
                        <img src="data:image/png;base64, {{image}}" class="cover" />
                     </a>
                     <!-- Status indicator positioned relative to .art -->
                     <div class="status">
                        {% if status == 'playing' %}
                            <span class="status-dot status-dot-playing"></span>
                        {% elif status == 'recent' %}
                            <span class="status-dot status-dot-recent"></span>
                        {% elif status == 'offline' %}
                            Offline
                        {% endif %}
                    </div>
                </div>

                <div class="content">
                    <!-- Status div removed from here -->
                    <a href="{{songURI}}" target="_blank">
                        <div class="song">{{songName}}</div>
                    </a>
                    <a href="{{artistURI}}" target="_blank">
                        <div class="artist">{{artistName}}</div>
                    </a>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>
