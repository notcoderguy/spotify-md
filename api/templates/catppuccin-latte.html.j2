<svg width="480" height="133" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <foreignObject width="480" height="133">
        <div xmlns="http://www.w3.org/1999/xhtml" class="container">
            <style>
                .main {
                    display: flex;
                }
                
                .container {
                    border-radius: 5px;
                    padding: 10px 10px 10px 0px;
                    background-color: #eff1f5; /* Latte base */
                }

                .art {
                    width: 27%;
                    margin-left: 5px;
                    position: relative;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                .content {
                    width: 71%;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                }

                .song {
                    width: 330px;
                    color: #4c4f69; /* Latte text */
                    overflow: hidden;
                    font-size: 24px;
                    text-align: center;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-weight: 600;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                    margin-bottom: 8px;
                }

                .artist {
                    width: 330px;
                    color: #6c6f85; /* Latte subtext1 */
                    font-size: 20px;
                    text-align: center;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                }

                .status {
                    position: absolute;
                    top: -2px;
                    right: 0px;
                    font-size: 10px;
                    height: 12px;
                    display: flex;
                    align-items: center;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
                    color: #5c5f77; /* Latte subtext0 */
                    background-color: rgba(239, 241, 245, 0.7);
                    padding: 1px 3px;
                    border-radius: 3px;
                    z-index: 1;
                }

                .status-dot {
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    display: inline-block;
                }

                .status-dot-playing {
                    background-color: #40a02b; /* Latte green */
                }

                .status-dot-recent {
                    background-color: #6c6f85; /* Latte subtext1 */
                }

                .cover {
                    width: 100px;
                    height: 100px;
                    border-radius: 5px;
                }
                
                .spotify-logo {
                    position: fixed;
                    right: 20px;
                    top: 10px;
                    width: 25px;
                }

                a {
                    text-decoration: none;
                }
            </style>

            <div class="main">
                 <div class="art">
                     <a href="{{songURI}}" target="_blank">
                        <img src="data:image/png;base64, {{image}}" class="cover" />
                     </a>
                     <div class="status">
                        {% if status == 'playing' %}
                            <span class="status-dot status-dot-playing"></span>
                        {% elif status == 'recent' %}
                            <span class="status-dot status-dot-recent"></span>
                        {% elif status == 'offline' %}
                            Offline
                        {% endif %}
                    </div>
                </div>

                <div class="content">
                    <a href="{{songURI}}" target="_blank">
                        <div class="song">{{songName}}</div>
                    </a>
                    <a href="{{artistURI}}" target="_blank">
                        <div class="artist">{{artistName}}</div>
                    </a>
                </div>
            </div>
        </div>
    </foreignObject>
</svg>
